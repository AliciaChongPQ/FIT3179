{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Incidence Rate For Cholera By State",
    "width": 700,
    "height": 500,
    "projection": {"type": "equalEarth",
                    "scale": 2000,
                    "center": [104.3, 3],
                    "translate": [200, 300]},
    "layer": [
      {
        "data": {"graticule": {"step": [1, 1]}}, 
        "mark": {
          "type": "geoshape",
          "stroke": "gray",
          "strokeWidth": 0.5
        }
      },

          {
        "data": {
          "url": "my.json",
          "format": {
            "type": "json",
            "property": "features"
          }
        },
        "mark": {
          "type": "geoshape",
          "stroke": "#000000",  
          "strokeWidth": 0.3   
  
        },
        "encoding": {
            "color": {
      "field": "Incidence Rate Per 100 000 Population",
      "type": "quantitative",
      "scale": {
            "type": "threshold",
            "domain": [0.2, 1, 3], 
            "range": ["#f2e7e6","#e64839", "#8c180f", "#290805"] 
          },
      "title": "Incidence Rate Per 100 000 Population"
    } ,
      "tooltip": [
        {"field": "properties.name", "type": "nominal", "title":"State"}
      ]
        },
        "transform": [
        {
          "lookup": "properties.name",  
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/AliciaChongPQ/FIT3179/refs/heads/main/Week%209%20Homework/data/cholera_by_state.csv"  ,
              "format": {"type": "csv"}
            },
            "key": "State",  
            "fields": ["Incidence Rate Per 100 000 Population"]
          }
        }
      ]
      }]
  }