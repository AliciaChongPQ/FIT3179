{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Incidence Rate For Cholera By State (2023)",
    "width": 800,
    "height": 400,
    "projection": {
      "type": "equalEarth",
      "clipAngle": 90,  
      "clip": true     
    },
    "layer": [
      {
       
        "data": {
          "graticule": {
            "step": [1, 1]
          }
        },
        "mark": {
          "type": "geoshape",
          "stroke": "#888888",
          "strokeWidth": 0.5   
        }
      },
      {
        "mark": {
          "type": "geoshape",
          "stroke": "#000000",  
          "strokeWidth": 1.5  
        }
      },
      {
       
        "mark": {
          "type": "geoshape",
          "stroke": "#d3d9e1",
          "strokeWidth": 0.3
        },
        "encoding": {
          "color": {
            "field": "Incidence Rate Per 100 000 Population",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
            "domain": [0.1, 1, 3], 
            "range": ["#f2e7e6","#e64839", "#8c180f", "#290805"] 
            },
            "title": "Incidence Rate Categories"
          }
        },
        "transform": [
          {
            "lookup": "properties.name",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/AliciaChongPQ/FIT3179/refs/heads/main/Week%209%20Homework/data/cholera_by_state.csv",
                "format": {"type": "csv"}
              },
              "key": "State",
              "fields": ["Incidence Rate Per 100 000 Population"]
            }
          },

        ]
      }
    ]
  }
  