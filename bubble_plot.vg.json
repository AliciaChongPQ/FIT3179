{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "height": 500,
    "width": 500,
    "title": "COVID-19 Cases per Country (13 Oct 2020)",
    "data": {
      "url": "https://raw.githubusercontent.com/AliciaChongPQ/FIT3179/refs/heads/main/diseases_per_100000.csv"
    },
    "mark": "circle",
    "encoding": {
      "x": {
        "field": "water_treatment_plants",
        "type": "quantitative",
        "title":"water_treatment_plants"
      },
      "y": {
        "field": "percentage_houses_without_clean_water",
        "type": "quantitative"
      },
      "size": {"field": "total_disease_incidence", "type": "quantitative", "scale": {"range": [100, 2000] }},
      "color": {"field": "water_treatment_plants", "type": "quantitative"},
      "tooltip": [
        {"field": "State", "type": "nominal"},
        {"field": "water_treatment_plants", "type": "quantitative", "title": "Number of Water Treatment Plants"},
        {"field": "percentage_houses_without_clean_water", "type": "quantitative", "title": "Percentage of Houses without Clean Water"},
        {"field": "total_disease_incidence", "type": "quantitative", "title": "Total Incidence of Typhoid, Malaria and Hepatitis A"},
        {"field": "water_treatment_plants", "type": "quantitative", "format": ","}
      ]
  }
  }